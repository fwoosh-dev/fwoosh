{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "allowJs": true,
    "module": "ES2020",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "jsx": "react-jsx",
    "target": "es2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ]
}
