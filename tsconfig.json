{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "allowJs": true,
    "module": "ES2020",
    "outDir": "lib",
    "strict": true,
    "jsx": "react-jsx",
    "target": "es2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "@twind/typescript-plugin"
      }
    ]
  }
}
